{
  "name": "Javadoc Search Frame",
  "version": "1.1",
  "description": "Javadoc incremental search for packages and classes.",
  "icons": {
     "16": "icons/icon16.png",
     "32": "icons/icon32.png",
     "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": [
          "http://*/*/allclasses-frame.html",
          "file://*/*/allclasses-frame.html",
          "http://*/*/package-frame.html",
          "file://*/*/package-frame.html"
      ],
      "js": [
          "allclasses-frame.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
          "http://*/*",
          "file://*/*"
      ],
      "js": [
          "hide-packages-frame.js"
      ],
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}
