{
  "name": "Javadoc Search Frame",
  "version": "1.0",
  "description": "Javadoc incremental search for packages and classes.",
  "background_page": "background.html",
  "options_page": "options.html",
  "icons": {
     "16": "icons/icon16.png",
     "32": "icons/icon32.png",
     "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
          "http://*/*/allclasses-frame.html",
          "file://*/*/allclasses-frame.html",
          "http://*/*/package-frame.html",
          "file://*/*/package-frame.html"
      ],
      "js": [
          "lib/Storage.js",
          "lib/Option.js",
          "allclasses-frame.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
          "http://*/*",
          "file://*/*"
      ],
      "js": [
          "hide-packages-frame.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*"
  ]
}
